<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/shipping_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="배송비 2500"
        android:textColor="@color/grey"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/shipping_review_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" | 리뷰 : "
        android:textColor="@color/grey"
        android:textSize="15sp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/shipping_price_tv"/>

    <TextView
        android:id="@+id/shipping_review_total_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textColor="@color/grey"
        android:textSize="15sp"
        android:layout_marginStart="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/shipping_review_tv"/>

    <TextView
        android:id="@+id/shipping_need_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정보가 더 필요하세요?"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/shipping_price_tv"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/shipping_website_cv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:strokeColor="@color/light_gray"
        app:strokeWidth="2dp"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/shipping_need_tv">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="shop.treemingbird"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="에게 메시지 보내기"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/black"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>