<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/signup_complete_welcome_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="jjy_joeun님, Instagram에\n 오신 것을 환영합니다"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="120dp"
        android:layout_marginHorizontal="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/signup_complete_complete_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="가입 완료하기"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="15sp"
        android:paddingVertical="14dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/blue_round_stroke"
        app:layout_constraintTop_toBottomOf="@+id/signup_complete_welcome_tv"/>

    <TextView
        android:id="@+id/signup_complete_add_new_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_new_account"
        android:textColor="#3797EF"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/signup_complete_complete_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>