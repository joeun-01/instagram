<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_reels_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/reels_dummyimg2"/>

  <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_reels_userimg_iv"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:src="@drawable/profile_ex1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/item_reels_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="userid"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/item_reels_userimg_iv"
            app:layout_constraintTop_toTopOf="@id/item_reels_userimg_iv"
            app:layout_constraintBottom_toBottomOf="@id/item_reels_userimg_iv" />

      <TextView
          android:id="@+id/item_reels_follow_tv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="팔로우"
          android:textSize="14sp"
          android:textColor="@color/white"
          android:layout_marginStart="15dp"
          app:layout_constraintStart_toEndOf="@id/item_reels_id_tv"
          app:layout_constraintTop_toTopOf="@id/item_reels_userimg_iv"
          app:layout_constraintBottom_toBottomOf="@id/item_reels_userimg_iv" />

        <TextView
            android:id="@+id/item_reels_content_tv"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="노래도 잘하는 강동원"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginStart="3dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/item_reels_id_tv"
            app:layout_constraintStart_toStartOf="parent"/>


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_reels_music_iv"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_music"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/item_reels_content_tv"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/item_reels_music_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="짱구는 못말려 BGM "
            android:textColor="@color/white"
            android:textSize="14sp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:layout_marginStart="7dp"
            app:layout_constraintTop_toTopOf="@id/item_reels_music_iv"
            app:layout_constraintBottom_toBottomOf="@id/item_reels_music_iv"
            app:layout_constraintStart_toEndOf="@id/item_reels_music_iv"/>


  </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/item_reels_icon_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_reels_heart_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_heartwhite"/>

        <TextView
            android:id="@+id/item_reels_heart_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:text="0"/>


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_reels_chat_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_chatwhite"/>

        <TextView
            android:id="@+id/item_reels_chat_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:text="0"/>

        <ImageView
            android:id="@+id/item_reels_msg_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_messagewhite"
            android:layout_marginBottom="15dp"/>

        <ImageView
            android:id="@+id/item_reels_more_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_morewhite"
            android:layout_marginBottom="15dp"/>



    <androidx.cardview.widget.CardView
        android:id="@+id/item_reels_userimg2_cv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/item_reels_userimg2_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/profile_ex1"
            android:scaleType="fitXY"/>
    </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>